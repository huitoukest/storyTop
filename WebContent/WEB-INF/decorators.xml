<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
    <!-- 此处用来定义不需要过滤的页面 -->
    <excludes>
        <pattern>/static/*</pattern>
        <pattern>/layouts/*</pattern>
        <pattern>/*getVCode.do*</pattern>
        <pattern>/js/</pattern>
        <pattern>/admin/*</pattern>
        <pattern>*.json*</pattern>       
    </excludes>

    <!-- 用来定义装饰器要过滤的页面 -->
    <decorator name="indexTop" page="indexTop.jsp">       
        <pattern>/*.do*</pattern>
        <pattern>/*.jsp*</pattern>
    </decorator>
</decorators>